{
    "openapi":"3.0.2",
    "info": {
      "title":"User API",
      "description": "User API",
      "version":"1.0.0"
    },
    "servers": [
      {"url":"https://localhost:3000"}
    ],
    "paths": {
        "/api/users/register": {
            "post": {
                "description": "User registration.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "ariefrahman":  {
                                    "description": "register user ariefrahman",
                                    "value": {
                                        "username": "ariefrahman",
                                        "password": "rahasiabanget",
                                        "name": "Arief Rahman"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "required": ["username", "password", "name"],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success regist user",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "description": "Success regist user",
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "name": "Arief Rahman",
                                                "username": "ariefrahman"

                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            } 
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "validation error",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "validationerror": {
                                        "description": "validation error",
                                        "value": {
                                            "errors": {
                                                "username": [
                                                    "username must not be blank",
                                                    "username min 6 characters"
                                                ],
                                                "name": [
                                                    "name must not be blank",
                                                    "name min 6 characters"
                                                ],
                                                "password": [
                                                    "password must not be blank",
                                                    "password min 6 characters"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "description": "User login.",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "username":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success login",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "token":{
                                                    "type":"string"
                                                }
                                            } 
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/me": {
            "get": {
                "description": "Retrieve logged-in user information.",
                "parameters": [
                    {
                        "schema": {
                            "type": "string"
                        },
                        "name":"Authorization",
                        "in":"header"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success get current user",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "token":{
                                                    "type":"string"
                                                }
                                            } 
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "description": "update current user",
                "parameters": [
                    {
                        "schema": {
                            "type": "string"
                        },
                        "name": "Authorization",
                        "in": "header"
                    }
                ],
                "requestBody":{
                    "description": "update current user",
                    "content": {
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success update current user",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "token":{
                                                    "type":"string"
                                                }
                                            } 
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/logout": {
            "delete": {
                "description": "User logout.",
                "parameters": [
                    {
                        "schema": {
                            "type": "string"
                        },
                        "name": "Authorization",
                        "in": "header"
                    }
                ],
                 "responses": {
                    "200": {
                        "description": "success logout user",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "data": {
                                            "type": "boolean"
                                        },
                                        "errors":{
                                            "type":"object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
  }